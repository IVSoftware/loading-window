<Window x:Class="loading_window.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loading_window"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock 
            Name="textBlockPrompt"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            FontSize="16" 
            FontWeight="Bold" 
            Margin="0,0,0,40" />
        <TextBox 
            Name="textBoxUserInput" 
            Width="200" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Margin="0,20,0,0" />
        <PasswordBox 
            Name="passwordBoxUserInput"
            Visibility="Hidden"
            Width="200" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Margin="0,20,0,0" />
        <Button 
            Name="buttonSubmit"
            Content="Submit" 
            Width="100" 
            Height="30" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Bottom" 
            Margin="0,0,0,40" />
    </Grid>
</Window>
