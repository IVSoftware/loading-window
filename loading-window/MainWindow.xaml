<Window x:Class="loading_window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loading_window"
        mc:Ignorable="d"
        Title="Main Window" Height="450" Width="800">
    <Grid>
        <Border BorderBrush="Green" BorderThickness="2" CornerRadius="5"
                Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center" 
                Width="400" Background="#E0FFE0">
            <TextBlock Text="This simulates a successful login."
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="16" FontWeight="Bold" Foreground="DarkGreen"
                       TextWrapping="Wrap" TextAlignment="Center"/>
        </Border>
    </Grid>
</Window>
